<div class="container m-5 ">
    <h1><%= @goal.name %></h1>
    <p><%=  @goal.description %></p>
    <p>start:<%=  @goal.start_date %></p>
    <p>finish:<%=  @goal.end_date %></p>

  <h1>Tasks</h1>
    <%= link_to "Add Task", new_goal_task_path(@goal), class: "btn btn-secondary text-decoration-none text-white" %>
    <% @tasks.each do |task| %>
      <%= task.name %>
      <p><%= task.description %></p>
        <%= link_to "Edit", edit_task_path(task), class: "btn btn-secondary text-decoration-none text-white" %>
        <%= link_to "Delete",
        task_path(task), class: "btn btn-secondary text-decoration-none text-white",
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
        %>
        <% end %>

