<div class="container">
    <h1><%= @goal.name %></h1>
    <p><%=  @goal.description %></p>
    <p>start:<%=  @goal.start_date %></p>
    <p>finish:<%=  @goal.end_date %></p>

  <h1>Tasks</h1>
  <ol>
    <% @tasks.each do |task| %>
      <li><%= task.name %></li>
      <p><%= task.description %></p>
      <%= link_to "Edit Task", edit_task_path(task) %>
      <%= link_to "Delete",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %>
    <% end %>
  </ol>
  <div class="btn btn-primary"><%= link_to "Add Task", new_goal_task_path(@goal) %></div>
</div>
