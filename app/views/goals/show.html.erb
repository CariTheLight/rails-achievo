<div class="container">
  <div class="container-content">
    <h1><%= @goal.name %></h1>
    <p><%=  @goal.description %></p>
    <p>start: <%= @goal.start_date %></p>
    <p>end: <%= @goal.end_date %></p>
  </div>

  <div class="btn btn-primary">
    <%= link_to "edit", goal_path(@goal) %>
  </div>

  <div class="btn btn-primary">
    <%= link_to "delete", goal_path(@goal), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
  </div>
</div>
